<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <context:property-placeholder system-properties-mode="OVERRIDE"/>

    <security:authentication-manager alias="authenticationManager">
        <!-- A common service user to use for deployments to dev, not in AD -->
        <security:authentication-provider>
            <security:user-service>
                <security:user name="user" password="user" authorities="ROLE_USER"/>
                <security:user name="admin" password="admin" authorities="ROLE_USER,ROLE_OPERATIONS"/>
                <security:user name="prodadmin" password="prodadmin" authorities="ROLE_USER,ROLE_OPERATIONS,ROLE_PROD_OPERATIONS"/>
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>

</beans>
