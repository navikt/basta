<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://appconfig.aura.nav.no"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://appconfig.aura.nav.no http://maven.adeo.no/xsd/appconfig.xsd ">
    <name>basta</name>

    <artifacts>
        <ear groupId="no.nav.aura.basta" artifactId="basta-ear"/>
    </artifacts>

    <resources>
        <ldap alias="ldap" mapToProperty="ldap"/>
        <datasource alias="bastaDB" jndi="java:/jdbc/bastaDB"/>
        <rest alias="fasit.rest.api" mapToProperty="fasit.rest.api"/>
        <baseUrl alias="jira" mapToProperty="jira"/>
        <baseUrl alias="ws.orchestrator" mapToProperty="ws.orchestrator"/>
        <credential alias="srvBasta" mapToProperty="srvbasta"/>
        <credential alias="user.orchestrator" mapToProperty="user.orchestrator"/>
        <!-- For cservice -->
        <baseUrl alias="security.CA.adeo" mapToProperty="scep.adeo.no"/>
        <credential alias="security.CA.adeo" mapToProperty="scep.adeo.no"/>
        <baseUrl alias="security.CA.preprod" mapToProperty="scep.preprod.local"/>
        <credential alias="security.CA.preprod" mapToProperty="scep.preprod.local"/>
        <baseUrl alias="security.CA.test" mapToProperty="scep.test.local"/>
        <baseUrl alias="sensu_api"/>
        <credential alias="security.CA.test" mapToProperty="scep.test.local"/>
        <!-- oem stuff -->
        <baseUrl alias="oem"/>
        <credential alias="oem"/>
        <!-- bigip stuff -->
        <baseUrl alias="bigip"/>
        <credential alias="bigip"/>

        <!-- MQ users -->
        <credential alias="basta.mq.u" mapToProperty="mqadmin.u"/>
        <credential alias="basta.mq.t" mapToProperty="mqadmin.t"/>
        <credential alias="basta.mq.q" mapToProperty="mqadmin.q"/>
        <credential alias="basta.mq.p" mapToProperty="mqadmin.p"/>
    </resources>

    <exposed-services>
        <exposedRest name="basta.rest.api" path="/rest" description="Basta sine tjenester for Ã¥ kunne lage jobber"/>
        <exposedRest name="oracle_v1" path="/rest/v1/oracledb"/>
    </exposed-services>

    <security>
        <roleMapping resourceAlias="basta.operations" toRole="ROLE_OPERATIONS"/>
        <roleMapping resourceAlias="basta.prodoperations" toRole="ROLE_PROD_OPERATIONS"/>
        <roleMapping resourceAlias="basta.superuser" toRole="ROLE_SUPERUSER"/>
    </security>

</application>