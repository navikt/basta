<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">


	<appender name="APP_INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<prudent>true</prudent>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %class - %m\n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_LOG_HOME}/fasit_info.%d{yyyy-ww}.log</fileNamePattern>
			<maxHistory>3</maxHistory>
		</rollingPolicy>
	</appender>

	<appender name="APP_ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<prudent>true</prudent>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %class - %m\n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_LOG_HOME}/fasit_error.%d{yyyy-MM}.log</fileNamePattern>
			<maxHistory>3</maxHistory>
		</rollingPolicy>
	</appender>

	<appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
		<syslogHost>localhost</syslogHost>
		<facility>LOCAL0</facility>
		<suffixPattern> level="%level" class="%class" %m</suffixPattern>
	</appender>
	
	<logger name="no.nav.aura" level="INFO">
		<appender-ref ref="APP_INFO_LOG" />
		<appender-ref ref="SYSLOG" />
	</logger>
	<root level="ERROR">
		<appender-ref ref="APP_ERROR_LOG" />
	</root>

</configuration>
